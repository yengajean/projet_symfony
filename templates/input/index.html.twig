{% extends 'base.html.twig' %}

{% block title %}Input index{% endblock %}

{% block body %}
    <h1>Input index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Qty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for input in inputs %}
            <tr>
                <td>{{ input.id }}</td>
                <td>{{ input.qty }}</td>
                <td>
                    <a href="{{ path('app_input_show', {'id': input.id}) }}">show</a>
                    <a href="{{ path('app_input_edit', {'id': input.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_input_new') }}">Create new</a>
{% endblock %}
